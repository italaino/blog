---
import Nav from "../../Components/Nav.astro";

const title = "Esta página es sobre mi";
const identidad = {
  primerNombre: "Guillermo",
  apellidoPaterno: "Peralta",
  apellidoMaterno: "Villalobos",
};
const habilidades = ["JavaScript", "PHP", "Python"];

const happy = true;
const finished = false;
const goal = 3;
let colorspecial = "green";
let borde = "1px solid white";
let peso = "bold"
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body style="background-color:rgb(52, 50, 50); color:wheat;">
<Nav/>

    <h1>Sobre mi</h1>
    <h2>... ¡y mi nuevo sitio Astro!</h2>

    <p>
      Mi nombre es {identidad.primerNombre}
      {identidad.apellidoPaterno}
      {identidad.apellidoMaterno} y mis habilidades son:
    </p>

    <ul>
      {habilidades.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {goal>2 ? <p>Verdadero</p> : <p>Falso</p>}


  </body>
</html>

<style define:vars={{colorspecial, peso, borde}}>

  .skill{
    color: var(--colorspecial);
    font-weight: var(--peso);
    border: var(--borde);
  }
</style>
